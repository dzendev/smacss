/*!-----------------------------------------------------------------
  .nav - модуль навигации
 -----------------------------------------------------------------*/
.nav
	margin 0
	padding 0
	display flex
	&__link
		display block
		text-decoration none
		padding: 4px 10px
		color #fff
		&:hover
			color #fff
		&.is-active
			background-color #687179
			color themeDefaultIsActiveColor
		+mema(sizeMedium)
			display none
