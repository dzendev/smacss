/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$facebook_logo_name = 'facebook-logo';
$facebook_logo_x = 0px;
$facebook_logo_y = 0px;
$facebook_logo_offset_x = 0px;
$facebook_logo_offset_y = 0px;
$facebook_logo_width = 16px;
$facebook_logo_height = 16px;
$facebook_logo_total_width = 32px;
$facebook_logo_total_height = 16px;
$facebook_logo_image = '../img/sprite.png';
$facebook_logo = 0px 0px 0px 0px 16px 16px 32px 16px '../img/sprite.png' 'facebook-logo';
$facebook_logo__hover_name = 'facebook-logo__hover';
$facebook_logo__hover_x = 16px;
$facebook_logo__hover_y = 0px;
$facebook_logo__hover_offset_x = -16px;
$facebook_logo__hover_offset_y = 0px;
$facebook_logo__hover_width = 16px;
$facebook_logo__hover_height = 16px;
$facebook_logo__hover_total_width = 32px;
$facebook_logo__hover_total_height = 16px;
$facebook_logo__hover_image = '../img/sprite.png';
$facebook_logo__hover = 16px 0px -16px 0px 16px 16px 32px 16px '../img/sprite.png' 'facebook-logo__hover';
$spritesheet_width = 32px;
$spritesheet_height = 16px;
$spritesheet_image = '../img/sprite.png';
$spritesheet_sprites = $facebook_logo $facebook_logo__hover;
$spritesheet = 32px 16px '../img/sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}

Example usage in HTML:

`display: block` sprite:
<div class="icon-home"></div>

To change `display` (e.g. `display: inline-block;`), we suggest using a common CSS class:

// CSS
.icon {
  display: inline-block;
}

// HTML
<i class="icon icon-home"></i>
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
