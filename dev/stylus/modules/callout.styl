/*!-----------------------------------------------------------------
  .callout - модуль выноска
 -----------------------------------------------------------------*/
.callout
	padding: 20px
	margin: 20px 0
	border: 1px solid #eee
	border-left-width: 5px
	border-radius: .25em

	h4
		margin-top: 0
		margin-bottom: .25em
	p:last-child
		margin-bottom: 0

	& + &
		margin-top: -5px

	&.is-warning
		border-color: $isWarning.borderColor
		h4
			color: $isWarning.borderColor
	&.is-danger
		border-color: $isDanger.borderColor
		h4
			color $isDanger.borderColor
	&.is-info
		border-color: $isInfo.borderColor
		h4
			color $isInfo.borderColor
	&.is-success
		border-color: $isSuccess.borderColor
		h4
			color $isSuccess.borderColor