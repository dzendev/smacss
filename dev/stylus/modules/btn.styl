/*!-----------------------------------------------------------------
  .btn - модуль кнопки
 -----------------------------------------------------------------*/
.btn
	cursor: pointer
	border-radius: .25em
	text-decoration none
	display: inline-block
	font-weight: normal
	line-height: 1.25
	text-align: center
	white-space: nowrap
	vertical-align: middle
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	border: 1px solid transparent
	padding: 0.38rem .8em
	font-size: 1rem
	transition: all 0.2s ease-in-out

	&.is-disable
	&[disabled]
		opacity .65

	&:focus, &.is-focus
		outline: 0
		box-shadow: 0 0 0 2px rgba(2, 117, 216, 0.25)
	&:focus, &:hover
		text-decoration: none

	&.is-primary
		color: #fff
		background-color: #0275d8
		border-color: #0275d8
		&:hover:not(.is-disable)
			color: #fff
			background-color: #025aa5
			border-color: #01549b

	&.is-secondary
		color: #292b2c
		background-color: #fff
		border-color: #ccc
		&:hover
			color: #292b2c
			background-color: #e6e6e6
			border-color: #adadad
	&.is-info
		color: #fff
		background-color: #5bc0de
		border-color: #5bc0de
		&:hover
			color: #fff
			background-color: #31b0d5
			border-color: #2aabd2
	&.is-danger
		background-color: #f44336
		&:hover
			background: #da190b
	&.is-success
		background-color: #4CAF50
		&:hover
			background-color: #46a049
	&.is-warning
		background-color: $isWarning.borderColor
		&:hover
			background: saturation($isWarning.borderColor, 85%)
	&.is-info
		background-color: #2196F3
		&:hover
			background: #0b7dda

