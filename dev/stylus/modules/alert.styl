/*!-----------------------------------------------------------------
	.alert - модуль предупреждений
 -----------------------------------------------------------------*/
.alert
	padding: .75rem 2rem .75rem 1.25rem
	margin-bottom: 1rem
	border: 1px solid #eee
	border-radius: .25rem
	position: relative
	> .fa-close
		cursor: pointer
		position absolute
		transform-style: preserve-3d
		top: 50%
		right 1rem
		transform: translate(0%, -50%)
	a
		text-decoration underline
	&.is-danger
		background-color: $isDanger.bgColor
		border-color: lightness($isDanger.bgColor, 85%)
		color: $isDanger.color
		a
		a:hover
			color $isDanger.color
	&.is-success
		background-color: $isSuccess.bgColor
		border-color: lightness($isSuccess.borderColor, 85%)
		color: $isSuccess.color
		a
		a:hover
			color $isSuccess.color
	&.is-warning
		background-color: $isWarning.bgColor
		border-color: lightness($isWarning.borderColor, 88%)
		color: $isWarning.color
		a
		a:hover
			color $isWarning.color
	&.is-info
		background-color: $isInfo.bgColor
		border-color: lightness($isInfo.borderColor, 85%)
		color: $isInfo.color
		a
		a:hover
			color $isInfo.color