/*!-----------------------------------------------------------------
	Классы состояния
 -----------------------------------------------------------------*/
/*!
	Состояние элементов
*/
[disabled]
.is-disable
.is-active
	overflow visible
/*!
	Видимость элементов
*/
.is-toggle
.is-hide
.is-show
	overflow visible
/*!
	Вид элементов:
*/
.is-primary // главный
.is-secondary // дополнительный
.is-info // информация
.is-danger // опасно
.is-success // успех
.is-warning // предупреждение
.is-error // ошибка
	overflow visible
/*!
	Расположение элементов
*/
.is-inline // в линию
.is-left // левo
.is-right // право
.is-up // сверхку
.is-down // снизу
.is-center // по центру
.is-sticky // приклеиное
	overflow visible
/*!
	Размер элементов
*/
.is-normal // нормальный размер
.is-small // маленький размер
.is-large // большой размер
	overflow visible
