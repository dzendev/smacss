mixin breadcrumb(breadcrumbs)
	nav.breadcrumb
		ul
			each breadcrumb in breadcrumbs
				if  breadcrumb.url
					li: a(href=breadcrumb.url) #{breadcrumb.name}
				else
					li #{breadcrumb.name}

//- .iconsvg - модуль svg sprite
mixin iconsvg(iconName, state)
	svg.iconsvg(class="iconsvg-" + iconName, class=state ? state: '')
		use(xlink:href="#" + iconName)